@model UserModel
@{
    ViewBag.Title = "Регистрация";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
</head>

<body>
    <h1>Регистрация</h1>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <table class="form-table">
            <tr>
                <td class="text">ФИО</td>
            </tr>
            <tr>
                <td>
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Имя" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "field-error" })
                </td>
            </tr>
            <tr>
                <td class="text">Email</td>
            </tr>
            <tr>
                <td>
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email" })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "field-error" })
                </td>
            </tr>
            <tr>
                <td class="text">Пароль</td>
            </tr>
            <tr>
                <td>
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Пароль" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "field-error" })
                </td>
            </tr>
            <tr>
                <td class="button1"><button type="submit">Зарегистрироваться</button></td>
            </tr>
            <tr>
                <td class="button2"><a href="/Account/Login">Авторизация</a></td>
            </tr>
        </table>
    }
</body>

</html>
